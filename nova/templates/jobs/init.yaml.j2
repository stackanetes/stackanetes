apiVersion: batch/v1
kind: Job
spec:
  template:
    spec:
      restartPolicy: OnFailure
      containers:
        - name: nova-init
          image: {{ deployment.image.init }}
          imagePullPolicy: Always
          env:
            - name: INTERFACE_NAME
              value: "eth0"
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: NAMESPACE
              valueFrom:
                fieldRef:
                  fieldPath: metadata.namespace
            - name: COMMAND
              value: "bash /tmp/init.sh"
            - name: DEPENDENCY_JOBS
              value: "mariadb-init"
            - name: DEPENDENCY_SERVICE
              value: "mariadb"
            - name: DEPENDENCY_CONFIG
              value: "/tmp/init.sh"
          volumeMounts:
            - name: initsh
              mountPath: /configmaps/init.sh
      volumes:
        - name: initsh
          configMap:
            name: nova-initsh
